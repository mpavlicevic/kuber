{
  "name": "kuberfile-test",
  "author": "Tiago Luchini <luchini@work.co>",
  "containers": {
    "mysql": {
      "image": "mysql",
      "ports": [{
        "containerPort": 3306,
        "hostPort": 3306
      }],
      "env": {
        "MYSQL_ROOT_PASSWORD": "test"
      }
    },
    "wordpress": {
      "image": "wordpress",
      "ports": [{
        "containerPort": 80,
        "hostPort": 8080
      }],
      "env": {
        "WORDPRESS_DB_USER": "root",
        "WORDPRESS_DB_PASSWORD": "test"
      },
      "links": [{
        "containerName": "mysql",
        "id": "mysql"
      }]
    }
  }
}